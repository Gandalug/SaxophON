                            HorizontalAlignment="Stretch"
                            Background="#bfff8a"
                            BorderBrush="DarkGray"
                            Visibility="{Binding IsMessageVisible, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
